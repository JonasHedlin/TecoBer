@model TecoBerBP.ViewModels.ActivityViewModel
@{
    ViewBag.Title = "CreateActivity";
}

<div class="row">
    <div class="col-md-6 col-xs-8">
        <h4>Create new activity</h4>
        <form method="post">
            <div class="form-group">
                <label name="Name">Name</label>
                <input name="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label name="Duration">Duration</label>
                <input type="number" name="Duration" class="form-control" value="12" />
                <span asp-validation-for="number" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label name="DurationUnit">Duration Unit</label>
                <input type="text" name="DurationUnit" class="form-control" value="Month" />
                <span asp-validation-for="text" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label name="Point">Point</label>
                <input type="number" name="Point" class="form-control" value="1" />
                <span asp-validation-for="number" class="text-muted"></span>
            </div>
            <div class="form-group">
                <a asp-controller="App" asp-action="index" class="btn btn-default">Cancel</a>
                <input type="submit" value="Create activity" class="btn btn-success" />
            </div>
        </form>

        @if (ViewBag.UserMessage != null)
        {
            <div>@ViewBag.UserMessage</div>
        }

    </div>
</div>
