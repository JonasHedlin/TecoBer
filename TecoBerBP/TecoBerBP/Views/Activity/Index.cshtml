@model IEnumerable<BPDataSource.Activity>
@{
    ViewBag.Title = "Activty";
}

<div class="row">
    <div class="col-md-6 col-xs-8">
        <h3>Activity</h3>
        <p>Existing activities</p>
        <ul>
            @foreach (var item in Model)
            {
                <li class="active"><a asp-controller="App" asp-action="Activity">@item.Name</a></li>
            }
        </ul>
        @*<h4>@Html.ActionLink("Click to Create New Activity", "Create", "Activity") </h4>*@
        <h5>Create new activity</h5>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration">Duration</label>
                <input type="number" asp-for="Duration" class="form-control" value="12"/>
                <span asp-validation-for="number" class="text-muted"></span>                
            </div>
            <div class="form-group">
                <label asp-for="DurationUnit">Duration Unit</label>
                <input type="text" asp-for="DurationUnit" class="form-control" value="Month" />
                <span asp-validation-for="text" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Point">Point</label>
                <input type="number" asp-for="Point" class="form-control" value="1"/>
                <span asp-validation-for="number" class="text-muted"></span>
            </div>
            <div class="form-group">
                <a asp-controller="App" asp-action="index" class="btn btn-default">Cancel</a>
                <input type="submit" value="Create activity" class="btn btn-success" />
            </div>
        </form>

        @if (ViewBag.UserMessage != null)
        {
            <br />
            <br />
            <div>@ViewBag.UserMessage</div>
            <br />
        }

    </div>

</div>


