<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script type="text/javascript">
        $(function () {
            $("input[id$='Date']").datepicker({
                showOn: "both",
                buttonImage: "/Content/images/calender.gif"
            });
        });
    </script>

</head>
<body> 
    <div class="navbar navbar-inverse navbar-fixed-top navBarColor">
        <div class="container-fluid">  
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navBrandColor">
                    @Html.ActionLink("Berotec Business Partner Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Konsultuppföljning", "Index", "Home")</li>
                    <li>@Html.ActionLink("Min Sida", "Index", "Home")</li>
                    <li>@Html.ActionLink("BeOrange", "Index", "Home")</li>
                    <li>@Html.ActionLink("Admin", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Roles", "Index", "BPRoles")</li>
                    <li>@Html.ActionLink("Users", "Index", "BPUsers")</li>
                    <li>@Html.ActionLink("Activities", "Index", "BPActivities")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid"> @*class="container body-content"*@
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Berotec Business Partner Portal</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
